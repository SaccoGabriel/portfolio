---
import Link from "../components/Link.astro";
import Profil from "../components/Profil.astro";

interface Props {
  name: string
  title: string;
  subtitle: string;
  job: string;
  body: string;
}

const { name, title, subtitle, body, job } = Astro.props;
---

<div class="header">
  <div class="presentation">
  <h1 class="title">
    {title}
  </h1>
  <h1 class="name">
    {name}
  </h1>
  <div class="description">
    <span style="font-weight:bolder;">{subtitle}</span> {" " + job}
  </div>
  <div class = "container">
    <Link title="Github" href="https://github.com/SaccoGabriel" />
    <Link title="Linkedin" href="https://www.linkedin.com/in/gabriel-sacco" />
    <Link title="gabriel.sacco74@gmail.com" href="mailto:gabriel.sacco74@gmail.com" />
  </div>
</div>

  <div class = "picture">
    <Profil file="Photo_Gabriel_SACCO.jpg"/>
  </div>

</div>

<style>

  .header
  {
    display: flex;
    flex-direction: column;
  }
  .picture{
      position:absolute;
      top: 20%;
      left: 70%;
      margin-left:50px;

      animation:appear 1s ease-in-out;
    animation-delay:0s;
    }
  .presentation {
    flex: 1;
    max-width: 70%;
    position: absolute;
    top: 20%;
    margin-left: 50px;
    }
  
  .title{
    
    animation:appear 1s ease-in-out;
    animation-delay:0s;
    margin:0;
  }

  @keyframes appear
  {
    0% {
      opacity: 0; /* Commencez avec une opacité à 0 pour le texte invisible */
    }

    100% {
      opacity: 1; /* Finissez avec une opacité à 1 pour le texte visible */
    }
  }

.name{
    font-family: 'Fjord One';
    position:relative;
    left:2%;
    font-weight: bolder;
    font-size:5rem;
    margin:0;

    background-image: var(--accent-gradient);
      
    -webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;

    animation:appear 1s ease-in-out;
    animation-delay:0s;
  }

  .description {
    font-family: 'Ledger';
    font-size: 25px;
    color: white;
    position: relative;
    max-width: 70%;
    animation:appear 1s ease-in-out;
    animation-delay:0s;
  }

  .container{
    display: flex;
    flex-wrap: wrap;

    animation:appear 1s ease-in-out;
    animation-delay:0s;
  }

  h1 {
    color: white;
    position: relative;
    font-weight: lighter;
    font-style: italic;
  }

  h2 {
    color: white;
    position: relative;
    font-weight: lighter;
  }
</style>
