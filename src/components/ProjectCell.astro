---
import "../styles/global.css";
import { Icon } from "astro-icon/components";


interface Props {
    projectTitle: string;
    projectIcon: string;
    projectContent: string;
    projectLinkedSkills:string;
}

const { projectTitle, projectIcon, projectContent, projectLinkedSkills} = Astro.props;

---
<div class ="projectTemplate">
    <div><Icon class = "projectIcon" name={projectIcon}/>
    </div>
    <div>{projectTitle}</div>
    <p>{projectContent}</p>
    <div>{projectLinkedSkills}</div>
</div>
<style>

.projectIcon
{    
    text-align: left;
}

.projectTemplate
{
    font-size: 1.1em;
    width:100%;
    max-width: 150px; 
    height:50%;
    padding: 0px 5vw 0px 5vw;
    background-color:red;
    border-radius: 20px;
    margin: 0px 10px 10px 10px;
    }

</style>
